#! /bin/sh

exec $HOME/scripts/bash/autostart.sh &
exec $HOME/scripts/bash/wpp -c ~/Pictures/Wallpapers/xdr_wpp.png &
exec urxvt -e sh -c "neofetch && zsh" & 
exec urxvt -e sh -c "$HOME/scripts/bash/palette.sh && zsh" & 

ffplay -nodisp -autoexit -volume 10 $HOME/.resources/boot_sound.mp3 >/dev/null 2>&1 &

killall compton
compton --dbus &

bspc monitor DP-2 -d DEV WWW DOC ETC MEDIA 

killall mpd
mpd &

#mouse moving/resizing in floating mode with alt
bspc config pointer_modifier mod4
bspc config pointer_action1 move
bspc config pointer_action2 resize_corner

#cosmetics
bspc config border_width 5
bspc config window_gap 50
bspc config top_padding 100
bspc config left_padding 60
bspc config right_padding 60
bspc config border_radius 20

#get xrdb colors
highlight=$(xrdb -query | grep "*.highlight" | cut -f 2)
background=$(xrdb -query | grep "*.background-no-transparancy:" | cut -f 2)

bspc config focused_border_color "$highlight"
bspc config normal_border_color "$background"

bspc config focus_follows_pointer true
bspc config split_ratio 0.52
bspc config borderless_monocle true
bspc config gapless_monocle false

